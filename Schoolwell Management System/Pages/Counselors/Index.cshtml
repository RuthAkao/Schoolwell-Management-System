@page
@model Schoolwell_Management_System.Pages.Counselors.IndexModel
@{
}

<br>
<h2>List of Counselors</h2>
<a class="btn btn-primary btn-sm" href="/Counselors/Create">New Counselor</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Counselor ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Specialization</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.listCounselors)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CounselorId</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Sex</td>
                <td>@item.Specialization</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Counselors/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Counselors/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>